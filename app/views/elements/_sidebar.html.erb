<div class="col-sm-3">
  <!-- Left column -->

  <!--tabs-->
  <div class="container">
    <div class="col-md-4">
      <ul class="nav nav-tabs" id="myTab">
        <li class="active">
          <a href="#pages" data-toggle="tab">Templates</a>
        </li>
        <li>
          <a href="#tags" data-toggle="tab">Tags</a>
        </li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane active" id="pages">
          <ul id="pages-sidebar"></ul>
        </div>
        <div class="tab-pane" id="tags">
          <ul id="tags-sidebar"></ul>
        </div>
      </div>
    </div>
  </div>

  <!--/tabs-->
</div>
<script>
    var tags = <%= raw @tags %>;
    var pages = <%= raw @pages %>;
</script>

<script id="tag-template" type="text/x-handlebars-template">
  <li>
    <a href="/tag/{{tag_name}}" class="item" data-remote="true">{{tag_name}}</a>
  </li>
</script>

<script id="page-template" type="text/x-handlebars-template">
  <li>
    <a href="/page/{{id}}" class="item" data-remote="true">{{name}}</a>
  </li>
</script>