<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @tag.name %>
</p>

<p>
  <strong>Tag name:</strong>
  <%= @tag.tag_name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @tag.description %>
</p>

<p>
  <strong>Example:</strong>
  <%= @tag.example %>
</p>

<p>
  <strong>Synopsis:</strong>
  <%= @tag.synopsis %>
</p>

<p>
  <strong>Version:</strong>
  <%= @tag.version %>
</p>

<p>
  <strong>Type of:</strong>
  <%= @tag.type_of %>
</p>

<p>
  <strong>Paginas:</strong>
  <% @tag.pages.map do |page| %>
    <%= link_to "#{page.content.system_name} #{page.system_name} ," , page_path(page) %>
  <% end %>
</p>

<p>
  <strong>Blocos:</strong>
  <% @tag.blocks.map do |block| %>
      <%= link_to block.tag_name, tag_path(block) %>
  <% end %>
</p>

<p>
  <strong>Possui os objetos:</strong>
  <% @tag.tags.map do |tag| %>
      <%= link_to tag.tag_name, tag_path(tag) %>
  <% end %>
</p>

<%= link_to 'Back', tags_path %>
